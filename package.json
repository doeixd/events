{
  "name": "@doeixd/events",
  "version": "0.0.8",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "reactive",
    "events",
    "typescript",
    "solidjs",
    "remix",
    "rxjs",
    "observable",
    "pridepack"
  ],
  "devDependencies": {
    "@types/node": "^22.10.2",
    "jsdom": "^27.0.0",
    "pridepack": "2.6.4",
    "standard-version": "^9.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "scripts": {
    "release": "standard-version && git push --follow-tags origin master",
    "prepublishOnly": "pridepack clean && npm run build:all",
    "build": "pridepack build",
    "build:all": "npm run build && npm run build:react",
    "build:react": "cd packages/react && npm ci && npm run build",
    "type-check": "pridepack check",
    "type-check:react": "cd packages/react && npm run type-check",
    "clean": "pridepack clean",
    "watch": "pridepack watch",
    "start": "pridepack start",
    "dev": "pridepack dev",
    "test": "vitest --run"
  },
  "private": false,
  "description": "A powerful, type-safe reactive event system for TypeScript/JavaScript applications",
  "repository": {
    "url": "https://github.com/doeixd/events",
    "type": "git"
  },
  "homepage": "https://github.com/doeixd/events",
  "bugs": {
    "url": "https://github.com/doeixd/events/issues"
  },
  "author": "Patrick Glenn",
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/cjs/production/index.js",
  "module": "./dist/esm/production/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "development": {
        "require": "./dist/cjs/development/index.js",
        "import": "./dist/esm/development/index.js"
      },
      "require": "./dist/cjs/production/index.js",
      "import": "./dist/esm/production/index.js"
    }
  },
  "typesVersions": {
    "*": {}
  }
}
