    "interaction",
    "gesture",
    "ui-events",
    "user-interaction",
    "@remix-run/events",
    "remix-events",
    "solid-events"
  ],
  "devDependencies": {
    "@types/node": "^22.10.2",
    "jsdom": "^27.0.0",
    "pridepack": "2.6.4",
    "standard-version": "^9.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "scripts": {
    "release": "standard-version && git push --follow-tags origin master",
    "prepublishOnly": "pridepack clean && npm run build:all",
    "build": "pridepack build",
    "build:all": "npm run build && npm run build:packages",
    "build:packages": "npm run build:react && npm run build:vue && npm run build:svelte && npm run build:solid",
    "build:react": "cd packages/react && npm ci && npm run build",
    "build:vue": "cd packages/vue && npm ci && npm run build",
    "build:svelte": "cd packages/svelte && npm ci && npm run build",
    "build:solid": "cd packages/solid && npm ci && npm run build",
    "type-check": "pridepack check && tsc --noEmit --skipLibCheck --project tsconfig.test.json",
    "type-check:all": "npm run type-check && npm run type-check:packages",
    "type-check:packages": "npm run type-check:react && npm run type-check:vue && npm run type-check:svelte && npm run type-check:solid",
    "type-check:react": "cd packages/react && npm run type-check",
    "type-check:vue": "cd packages/vue && npm run type-check",
    "type-check:svelte": "cd packages/svelte && npm run type-check",
    "type-check:solid": "cd packages/solid && npm run type-check",
    "clean": "pridepack clean",
    "watch": "pridepack watch",
    "start": "pridepack start",
    "dev": "pridepack dev",
    "test": "vitest --run"
  },
  "private": false,
  "description": "A powerful, type-safe reactive event system for TypeScript/JavaScript applications",
  "readme": "README.md",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/doeixd/events",
    "type": "git"
  },
  "homepage": "https://github.com/doeixd/events",
  "bugs": {
    "url": "https://github.com/doeixd/events/issues"
  },
  "author": "Patrick Glenn",
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/cjs/production/index.js",
  "module": "./dist/esm/production/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "development": {
        "require": "./dist/cjs/development/index.js",
        "import": "./dist/esm/development/index.js"
      },
      "require": "./dist/cjs/production/index.js",
      "import": "./dist/esm/production/index.js"
    }
  },
  "typesVersions": {
    "*": {}
  },
  "vitest": {
    "environment": "jsdom"
  }
}
