{
  "name": "@doeixd/events",
  "version": "0.0.21",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "reactive",
    "events",
    "typescript",
    "solidjs",
    "remix",
    "rxjs",
    "observable",
    "pridepack",
    "framework-agnostic",
